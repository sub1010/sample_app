<h1>Listing tweets</h1>

<table>
  <tr>
    <th>Belng to</th>
    <th>Tweet text</th>
    <th>Likes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.belng_to %></td>
    <td><%= tweet.tweet_text %></td>
    <td><%= tweet.likes %></td>
    <td><%= link_to 'Destroy', tweet, confirm: 'Are you sure?', method: :delete %></td>
	<td><%= link_to 'Like', :controller => 'tweets', :action => 'increase_likes', :id => tweet.id  %></td>
  </tr>
<% end %>
</table>

